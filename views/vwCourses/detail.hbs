    <p class="h6 text-center ml-md-3">{{this.product.TinyDes}}</p>
    <i style="margin-left:40%" class="text-center fa fa-star text-warning " aria-hidden="true" >{{this.rating.rate}} ({{this.rating.cnt}} ratings)</i>
