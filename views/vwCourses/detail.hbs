                    {{#each this.listMost}}
                        <div style="margin-right: 5px;" class="item mb-4">
                            <div class="card text-center border-0 shadow">
                                <img src="/public/img/123.jpg" alt="" class="card-img-top" style="width: 50%px;height:50%px">
                                <div class="card-body">
                                    <div class="card-title text-center">
                                        <h4>{{CourName}}</h4>
                                    </div>
                                    <p class="card-text text-center">{{TinyDes}}</p>
                                    <a href="/courses/detail/{{CourID}}" class="btn btn-primary">Check detail</a>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
   <div class="col-md-12">
    <div class="offer-dedicated-body-left">
        <div class="tab-content" id="pills-tabContent">

            <div class="tab-pane fade active show" id="pills-reviews" role="tabpanel" aria-labelledby="pills-reviews-tab">
                <div id="ratings-and-reviews" class="bg-white rounded shadow-sm p-4 mb-4 clearfix restaurant-detailed-star-rating">
                     <i style="" class=" fa fa-star text-dark " aria-hidden="true" >{{this.rating.rate}} COURSES RATING - ({{this.rating.cnt}} ratings)</i>
                </div>

                <div class="bg-white rounded shadow-sm p-4 mb-4 restaurant-detailed-ratings-and-reviews">
                    <h5 class="mb-1">All Ratings and Reviews</h5>
                    {{#each this.rev}}
                    <hr>
                    <div class="reviews-members pt-4 pb-4">
                        <div class="media">
                          <div class="d-flex">
                            <a href="#"><img alt="Generic placeholder image" src="http://bootdey.com/img/Content/avatar/avatar1.png" class="mr-3 rounded-pill"></a>
                            <h6 style="margin-left: 10px;" class="mb-1 mt-3 mr-3" ><p class="text-black" href="#">{{username}}</p></h6>
                            </div>
                            <div class="media-body">
                                <div class="reviews-members-header">
                                   <i style="" class=" fa fa-star text-warning " aria-hidden="true" >{{Rating}}</i>
                                    
                                    <p class="text-gray">{{dob}}</p>
                                </div>
                                <div class="reviews-members-body">
                                    <p>{{FeedBack}} </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    </hr>
                    {{/each}}
                    
                    <a class="text-center w-100 d-block mt-4 font-weight-bold" href="#">See All Reviews</a>
                </div>

            </div>
        </div>
    </div>
</div>
